<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           elementFormDefault="qualified">
    
    <xs:attribute name="name" type="xs:string"/>
    <xs:attribute name="default" type="xs:string"/>
    <xs:attribute name="deprecated">
        <xs:simpleType>
            <xs:restriction base="xs:string">
                <xs:pattern value="[01]"/>
            </xs:restriction>
        </xs:simpleType>
    </xs:attribute>
    <xs:attribute name="deprecatedSince" >
        <xs:simpleType>
            <xs:restriction base="xs:string">
                <xs:pattern value="[0-9]{4}-[0-9]{2}-[0-9]{2}"/>
            </xs:restriction>
        </xs:simpleType>
    </xs:attribute>
    <xs:attribute name="deprecatedUntil" >
        <xs:simpleType>
            <xs:restriction base="xs:string">
                <xs:pattern value="[0-9]{4}-[0-9]{2}-[0-9]{2}"/>
            </xs:restriction>
        </xs:simpleType>
    </xs:attribute>
    <xs:element name="column">
        <xs:complexType>
            <xs:attribute ref="name" />
            <xs:attribute ref="default" />
        </xs:complexType>
    </xs:element>
    
    <xs:element name="colspec">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="column" minOccurs="0" maxOccurs="unbounded" /> 
            </xs:sequence>
        </xs:complexType>
    </xs:element>                                        
    
    <xs:element name="option">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="option" minOccurs="0" maxOccurs="unbounded" />
            </xs:sequence>
            <xs:attribute ref="name" />
            <xs:attribute ref="deprecated" /> 
            <xs:attribute ref="deprecatedSince" />
            <xs:attribute ref="deprecatedUntil" />
        </xs:complexType>
    </xs:element>
    <xs:element name="options">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="colspec" minOccurs="1" maxOccurs="1" />
                <xs:element ref="option" minOccurs="1" maxOccurs="unbounded" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>
